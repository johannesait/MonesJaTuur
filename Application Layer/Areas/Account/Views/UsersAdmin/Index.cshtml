@model IEnumerable<ApplicationLayer.Areas.Account.Models.ApplicationUser>

@{
    ViewBag.Title = "Users";
}

<h2>Users <small>OVERVIEW</small></h2>
<hr/>


<table id="UsersAdmin" class="table table-hover table-striped">
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.UserName)*@Username
            </th>
            <th>

            </th>
        </tr>
    </thead>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    <a href='@Html.ActionLink("Delete", "Delete", new { id = item.Id })' class=" glyphicon glyphicon-remove" value="@item.Id"></a>
                 </td>
            </tr>
            @Html.ActionLink(item.UserName, "Edit", new { id = item.Id }, new { data_push = true, @style = "display: none;", @class = "clickable-row", @id = item.Id })
        }
    }
</table>
